@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<link rel="stylesheet" href="~/css/change-info.css">      
<partial name="_StatusMessage" for="StatusMessage" />



<div class="wrapper fadeInDown">
    <div id="formContent">
        <h2 class="active"> Add Phone number </h2>
        <form id="profile-form" method="post" >
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       <input asp-for="Username" class="form-control" disabled placeholder="User name"/>

        <input type="text" asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone number"/>
        <br/><span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

        <input id="update-profile-button" type="submit" class="fadeIn fourth" value="Save"/>
         </form>
    </div>
</div>
