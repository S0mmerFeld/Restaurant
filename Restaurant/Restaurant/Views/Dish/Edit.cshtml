@using System.Collections;
@using Data.Entities;
@using Business.Models

@model DishViewModel


@{
var message = TempData["successmessage"] ?? string.Empty;
}



@if(@Model.DishModel != null)
{
    <div class="container shadow p-5">
        @if(@Model.DishModel.Name != null)
                {
                    <div class="form-group d-flex justify-content-center">        
                            <h2>Edit @Model.DishModel.Name</h2>
                    </div>

                    <div class="form-group d-flex justify-content-center">                
                         <h2 class="text-success" >@message</h2>      
                    </div>
                }

        <form method="post">
            <div asp-validation-summary="All"></div>      
        
            <div class="form-row">
                <input type="hidden" asp-for="DishModel.Id" />
                <div class="form-group col-md-6">
                    <label asp-for="DishModel.Name">Dish Name</label>
                    <input type="text" class="form-control mb-3" asp-for="DishModel.Name" placeholder="Enter Name">
                    <span asp-validation-for="DishModel.Name" class=" alert-danger"></span>
                </div>      
                <div class="form-group col-md-6">
                    <label asp-for="DishModel.Price">Price</label>
                    <input type="text" class="form-control mb-3" asp-for="DishModel.Price" placeholder="Enter Price">
                    <span asp-validation-for="DishModel.Price" class=" alert-danger"></span>
                </div>
            </div>

             <div class="form-row"> 
                    @if(@Model.DishModel.ImgPath != null)
                      {                               
                        <div class="form-group col-md-9 mb-3">                            

                        <div class="form-row">
                                <label asp-for="DishModel.ImgPath">ImgPath</label>
                                <input type="text" class="form-control" asp-for="DishModel.ImgPath">
                                <span asp-validation-for="DishModel.ImgPath" class=" alert-danger"></span>
                            </div> 
                            <div class="form-row">                   
                                <label asp-for="DishModel.Description">Description</label>
                                <input type="text" class="form-control" asp-for="DishModel.Description">
                                @*<textarea class="form-control mb-3" rows="3" placeholder="Enter Description"></textarea>               *@     
                                <span asp-validation-for="DishModel.Description" class=" alert-danger"></span>
                            </div>  
                            <div class="form-group">
                                <label asp-for="DishModel.DishGroup" class="control-label"></label>
                                <select asp-for="DishModel.DishGroup" 
                                        class="form-control" 
                                        asp-items="Html.GetEnumSelectList<DishGroup>()">
                                    <option>Select type ...</option>
                                </select>
                                <span asp-validation-for="DishModel.DishGroup" class="text-danger"></span>
                            </div>



                            <div class="form-group">
                                <label asp-for="IngredientsIds" class="control-label">Current ingredients</label>

                                    @foreach (var dishcomp in Model.DishModel.DishCompositionIds)
                                    {
                                        @*<p>@dishcomp.Ingredient.Name, @dishcomp.Ingredient.Amount</p>*@
                                        <p>@dishcomp</p>
                                    }
                            </div>


                            <div class="form-group">
                                <label asp-for="IngredientsIds" class="control-label"></label>
                                <select name="IngredientsIds" id="Ingredients" class ="form-control" multiple>

                                    @foreach (var dishcomp in Model.dishCompositionModels)
                                    {
                                        <option value = "@dishcomp.Id">@dishcomp.Ingredient.Name, @dishcomp.Ingredient.Amount</option>
                                    }
                              </select>
                            </div>

                </div>
                }
               
                  
                
                @if(@Model.DishModel.ImgPath != null)
                {
                    <div class="form-group col-md-3 mb-3">
                        <div class="text-center">
                              <img src="@Model.DishModel.ImgPath.ToString()" class="img-fluid mb-3" alt="@Model.DishModel.Name">
                        </div>
                    </div>
                }
            </div>

            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-lg btn-primary p-2">
                    <i class="bi bi-file-plus-fill"></i>Update
                </button>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <a asp-controller="Dish" asp-action="Details" class="btn btn-lg btn-warning p-2">Back To List</a>
            </div>
        </form>

    </div>
}