@using System.Collections;
@using Business.Models
@using Data.Entities;

@model DishModel

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Employee</h2>
    </div>

    <form method="post" asp-action="DeleteEmp">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Dish  Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Price">Price</label>
                <input type="text" class="form-control mb-3" asp-for="Price" placeholder="Enter Price">
                <span asp-validation-for="Price" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter Description">
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="DishGroup">Created On</label>
                <input type="datetime-local" class="form-control" asp-for="DishGroup">
                <span asp-validation-for="DishGroup" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>        
        <a asp-controller="Dish" asp-action="Details" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

} 

</div>